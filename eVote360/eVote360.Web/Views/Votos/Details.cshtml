@model eVote360.Domain.Entities.Voto

@{
    ViewData["Title"] = "Detalle Voto";
    var nombreBoleta = Model.Candidatura?.NombreBoleta;
    var nombreMostrar = string.IsNullOrWhiteSpace(nombreBoleta) ? Model.Candidatura?.NombreCompleto : nombreBoleta;
}

<h1 class="display-6 fw-bold">Detalle Voto</h1>
<hr />

<dl class="row">
    <dt class="col-sm-3">ID</dt>
    <dd class="col-sm-9">@Model.Id</dd>

    <dt class="col-sm-3">Elecci√≥n</dt>
    <dd class="col-sm-9">
        @(Model.Eleccion != null ? $"{Model.Eleccion.Anio} - {Model.Eleccion.Tipo}" : Model.EleccionId.ToString())
    </dd>

    <dt class="col-sm-3">Puesto</dt>
    <dd class="col-sm-9">@((Model.PuestoElectivo?.Nombre) ?? Model.PuestoElectivoId.ToString())</dd>

    <dt class="col-sm-3">Candidatura</dt>
    <dd class="col-sm-9">@((nombreMostrar) ?? Model.CandidaturaId.ToString())</dd>

    <dt class="col-sm-3">Partido</dt>
    <dd class="col-sm-9">@((Model.Candidatura?.PartidoPolitico?.Siglas) ?? "-")</dd>

    <dt class="col-sm-3">Fecha/Hora</dt>
    <dd class="col-sm-9">@Model.FechaHora.ToString("yyyy-MM-dd HH:mm")</dd>

    <dt class="col-sm-3">Token</dt>
    <dd class="col-sm-9">@((string.IsNullOrWhiteSpace(Model.TokenVoto)) ? "-" : Model.TokenVoto)</dd>
</dl>

<div class="mt-3">
    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
    <a class="btn btn-secondary ms-2" asp-action="Index">Volver</a>
</div>