@model eVote360.Web.Models.Home.HomeDashboardViewModel

@{
    ViewData["Title"] = "Inicio";
}

<div class="mb-4">
    <div class="d-flex flex-wrap align-items-end justify-content-between gap-3">
        <div>
            <h1 class="fw-bold mb-1">eVote360</h1>
            <p class="text-muted mb-0">
                Panel electoral — distribución de votos por partido y candidaturas principales.
            </p>
        </div>

        <div class="d-flex flex-wrap gap-2">
            <span class="badge bg-primary-subtle text-primary border border-primary-subtle p-2">
                Partidos: <strong>@Model.TotalPartidos</strong>
            </span>
            <span class="badge bg-success-subtle text-success border border-success-subtle p-2">
                Candidaturas: <strong>@Model.TotalCandidaturas</strong>
            </span>
            <span class="badge bg-dark-subtle text-dark border border-dark-subtle p-2">
                Votos registrados: <strong>@Model.TotalVotos</strong>
            </span>
        </div>
    </div>
</div>

@if (Model.Partidos == null || !Model.Partidos.Any())
{
    <div class="alert alert-warning">
        No hay partidos activos o datos disponibles para mostrar.
    </div>
}
else
{
    <div class="row g-3">
        @foreach (var p in Model.Partidos)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div>
                                <div class="d-flex align-items-center gap-2">
                                    <span class="badge bg-dark">@p.Siglas</span>
                                    <h5 class="card-title mb-0">@p.Nombre</h5>
                                </div>
                                <div class="text-muted small mt-2">
                                    <div><strong>Presidente:</strong> @(string.IsNullOrWhiteSpace(p.Presidente) ? "—" : p.Presidente)</div>
                                    <div><strong>Vicepresidente:</strong> @(string.IsNullOrWhiteSpace(p.Vicepresidente) ? "—" : p.Vicepresidente)</div>
                                </div>
                            </div>

                            <div class="text-end">
                                <div class="fw-bold fs-5">@p.Porcentaje%</div>
                                <div class="text-muted small">@p.Votos voto(s)</div>
                            </div>
                        </div>

                        <div class="progress mb-3" style="height: 10px;">
                            <div class="progress-bar" role="progressbar"
                                 style="width: @p.Porcentaje%;"
                                 aria-valuenow="@p.Porcentaje" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>

                        <div class="mt-auto d-flex justify-content-between align-items-center">
                            <span class="text-muted small">
                                Ranking por % de votos
                            </span>

                            @* Si luego quieres: link a detalle por partido *@
                            <span class="text-muted small">ID: @p.PartidoId</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="alert alert-info mt-4">
        <strong>Nota:</strong> Los porcentajes se calculan con base en los votos registrados en la tabla <code>Votos</code>.
        Si aún no hay votos, todos los partidos aparecerán en 0%.
    </div>
}