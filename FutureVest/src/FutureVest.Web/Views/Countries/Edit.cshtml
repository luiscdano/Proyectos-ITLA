@model FutureVest.Data.Entities.Country

@{
    ViewData["Title"] = "Edit Country";
}

<h2>Edit Country</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">ISO3</label>
        <input asp-for="Iso3" class="form-control" maxlength="3" />
        <span asp-validation-for="Iso3" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Region</label>
        <input asp-for="Region" class="form-control" />
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsEligible" class="form-check-input" />
        <label class="form-check-label">Is Eligible</label>
    </div>

    <button class="btn btn-primary" type="submit">Update</button>
    <a class="btn btn-secondary" asp-action="Index">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}