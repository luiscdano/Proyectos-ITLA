@model FutureVest.Data.Entities.Country

@{
    ViewData["Title"] = "Country Details";
}

<h2>Details</h2>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">ISO3</dt>
    <dd class="col-sm-10">@Model.Iso3</dd>

    <dt class="col-sm-2">Region</dt>
    <dd class="col-sm-10">@Model.Region</dd>

    <dt class="col-sm-2">Eligible</dt>
    <dd class="col-sm-10">@(@Model.IsEligible ? "Yes" : "No")</dd>
</dl>

<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
<a class="btn btn-secondary" asp-action="Index">Back</a>