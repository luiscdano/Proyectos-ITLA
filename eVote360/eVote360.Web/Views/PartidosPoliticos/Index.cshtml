@model List<eVote360.Domain.Entities.PartidoPolitico>

@{
    ViewData["Title"] = "Partidos Políticos";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="m-0">Partidos Políticos</h2>
    <a class="btn btn-primary" asp-action="Create">+ Nuevo Partido</a>
</div>

@if (Model == null || Model.Count == 0)
{
    <div class="alert alert-info">
        No hay partidos registrados.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Siglas</th>
                    <th>Activo</th>
                    <th style="width: 260px;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.Nombre</td>
                        <td><span class="badge bg-dark">@p.Siglas</span></td>
                        <td>
                            @if (p.IsActive)
                            {
                                <span class="badge bg-success">Sí</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </td>
                        <td>
                            <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@p.Id">Ver</a>
                            <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@p.Id">Editar</a>
                            <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@p.Id">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}