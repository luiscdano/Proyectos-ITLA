@model FutureVest.Data.Entities.CountryIndicator

@{
    ViewData["Title"] = "Delete Country Indicator";
}

<h1>Delete</h1>

<div class="alert alert-warning">
    Are you sure you want to delete this?
</div>

<div>
    <h4>Country Indicator</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Country</dt>
        <dd class="col-sm-9">@Model.Country?.Name</dd>

        <dt class="col-sm-3">Macro Indicator</dt>
        <dd class="col-sm-9">@Model.MacroIndicator?.Name (@Model.MacroIndicator?.Code)</dd>

        <dt class="col-sm-3">Year</dt>
        <dd class="col-sm-9">@Model.Year</dd>

        <dt class="col-sm-3">Value</dt>
        <dd class="col-sm-9">@(Model.Value.HasValue ? Model.Value.Value.ToString("0.####") : "-")</dd>

        <dt class="col-sm-3">Missing</dt>
        <dd class="col-sm-9">@(Model.Missing ? "Yes" : "No")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </form>
</div>