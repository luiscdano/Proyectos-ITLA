<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FutureVest.Web</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FutureVest.Web.styles.css" asp-append-version="true" />
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand"
               asp-controller="Home"
               asp-action="Index">
                FutureVest
            </a>

            <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">

                    <!-- Home -->
                    <li class="nav-item">
                        <a class="nav-link text-dark"
                           asp-controller="Home"
                           asp-action="Index">
                            Home
                        </a>
                    </li>

                    <!-- Dashboard -->
                    <li class="nav-item">
                        <a class="nav-link text-dark"
                           asp-controller="Dashboard"
                           asp-action="Index">
                            Dashboard
                        </a>
                    </li>

                    <!-- Countries -->
                    <li class="nav-item">
                        <a class="nav-link text-dark"
                           asp-controller="Countries"
                           asp-action="Index">
                            Countries
                        </a>
                    </li>

                    <!-- Macro Indicators -->
                    <li class="nav-item">
                        <a class="nav-link text-dark"
                           asp-controller="MacroIndicators"
                           asp-action="Index">
                            Macro Indicators
                        </a>
                    </li>

                    <!-- Country Indicators -->
                    <li class="nav-item">
                        <a class="nav-link text-dark"
                           asp-controller="CountryIndicators"
                           asp-action="Index">
                            Country Indicators
                        </a>
                    </li>

                    <!-- Privacy -->
                    <li class="nav-item">
                        <a class="nav-link text-dark"
                           asp-controller="Home"
                           asp-action="Privacy">
                            Privacy
                        </a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2026 - FutureVest.Web -
        <a asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>