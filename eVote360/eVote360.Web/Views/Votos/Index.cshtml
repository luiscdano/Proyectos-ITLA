@model IEnumerable<eVote360.Domain.Entities.Voto>

@{
    ViewData["Title"] = "Votos";
}

<h1 class="display-5 fw-bold">Votos</h1>

<div class="alert alert-info mt-3">
    Registro de votos emitidos (Elección + Puesto + Candidatura). Incluye fecha/hora y token opcional.
</div>

<p>
    <a class="btn btn-primary" asp-action="Create">+ Nuevo Voto</a>
</p>

<table class="table table-striped table-hover align-middle">
    <thead>
        <tr>
            <th>ID</th>
            <th>Elección</th>
            <th>Puesto</th>
            <th>Candidatura</th>
            <th>Partido</th>
            <th>Fecha/Hora</th>
            <th>Token</th>
            <th class="text-end">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var nombreBoleta = item.Candidatura?.NombreBoleta;
            var nombreMostrar = string.IsNullOrWhiteSpace(nombreBoleta) ? item.Candidatura?.NombreCompleto : nombreBoleta;

            <tr>
                <td>@item.Id</td>
                <td>@(item.Eleccion != null ? $"{item.Eleccion.Anio} - {item.Eleccion.Tipo}" : item.EleccionId.ToString())</td>
                <td>@(item.PuestoElectivo?.Nombre ?? item.PuestoElectivoId.ToString())</td>
                <td>@(nombreMostrar ?? item.CandidaturaId.ToString())</td>
                <td>@(item.Candidatura?.PartidoPolitico?.Siglas ?? "-")</td>
                <td>@item.FechaHora.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@(string.IsNullOrWhiteSpace(item.TokenVoto) ? "-" : item.TokenVoto)</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Ver</a>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>