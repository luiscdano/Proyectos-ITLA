@model eVote360.Domain.Entities.PuestoElectivo

@{
    ViewData["Title"] = "Detalle Puesto Electivo";
}

<h2>Detalle Puesto Electivo</h2>
<hr />

<div class="card">
    <div class="card-body">
        <p><strong>ID:</strong> @Model.Id</p>
        <p><strong>Nombre:</strong> @Model.Nombre</p>
        <p><strong>Descripción:</strong> @(string.IsNullOrWhiteSpace(Model.Descripcion) ? "-" : Model.Descripcion)</p>
        <p><strong>Activo:</strong> @(Model.IsActive ? "Sí" : "No")</p>
    </div>
</div>

<div class="d-flex gap-2 mt-3">
    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
    <a class="btn btn-secondary" asp-action="Index">Volver</a>
</div>