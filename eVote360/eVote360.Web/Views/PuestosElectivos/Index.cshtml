@model List<eVote360.Domain.Entities.PuestoElectivo>

@{
    ViewData["Title"] = "Puestos Electivos";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Puestos Electivos</h2>
    <a class="btn btn-primary" asp-action="Create">+ Nuevo Puesto</a>
</div>

<div class="alert alert-info">
    Lista base del sistema (incluye seed inicial + puestos ampliados: Vicepresidencia, Vicealcaldía, Regiduría, Distrito Municipal y PARLACEN).
</div>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th style="width:70px;">ID</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th style="width:90px;">Activo</th>
            <th style="width:260px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || Model.Count == 0)
        {
            <tr>
                <td colspan="5" class="text-center text-muted">No hay registros.</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td class="fw-semibold">@item.Nombre</td>
                    <td>@(string.IsNullOrWhiteSpace(item.Descripcion) ? "-" : item.Descripcion)</td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="badge bg-success">Sí</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">No</span>
                        }
                    </td>
                    <td>
                        <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Ver</a>
                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>