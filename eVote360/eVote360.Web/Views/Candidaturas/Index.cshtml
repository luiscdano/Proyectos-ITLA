@model IEnumerable<eVote360.Domain.Entities.Candidatura>

@{
    ViewData["Title"] = "Candidaturas";
}

<h1 class="display-5 fw-bold">Candidaturas</h1>

<div class="alert alert-info mt-3">
    Registro de candidaturas por Elección + Puesto + Partido.
</div>

<p>
    <a class="btn btn-primary" asp-action="Create">+ Nueva</a>
</p>

<table class="table table-striped table-hover align-middle">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Elección</th>
            <th>Puesto</th>
            <th>Partido</th>
            <th>Activo</th>
            <th class="text-end">Acciones</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            var nombreBoleta = item.NombreBoleta;
            var nombreMostrar = string.IsNullOrWhiteSpace(nombreBoleta) ? item.NombreCompleto : nombreBoleta;

            <tr>
                <td>@nombreMostrar</td>
                <td>@(item.Eleccion != null ? $"{item.Eleccion.Anio} - {item.Eleccion.Tipo}" : item.EleccionId.ToString())</td>
                <td>@(item.PuestoElectivo?.Nombre ?? item.PuestoElectivoId.ToString())</td>
                <td>@(item.PartidoPolitico != null ? $"{item.PartidoPolitico.Siglas} - {item.PartidoPolitico.Nombre}" : item.PartidoPoliticoId.ToString())</td>
                <td>
                    @if (item.IsActive)
                    {
                        <span class="badge bg-success">Sí</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">No</span>
                    }
                </td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Ver</a>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>