@model List<FutureVest.Data.Entities.Country>

@{
    ViewData["Title"] = "Countries";
}

<h2>Countries</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">New Country</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>ISO3</th>
            <th>Region</th>
            <th>Eligible</th>
            <th style="width:220px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Name</td>
                <td>@c.Iso3</td>
                <td>@c.Region</td>
                <td>@(c.IsEligible ? "Yes" : "No")</td>
                <td>
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@c.Id">Details</a>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@c.Id">Edit</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@c.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>