@model IEnumerable<eVote360.Domain.Entities.Eleccion>

@{
    ViewData["Title"] = "Elecciones";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="m-0">Elecciones</h1>
    <a class="btn btn-primary" asp-action="Create">+ Nueva Elección</a>
</div>

<div class="alert alert-info">
    Gestión de procesos electorales (año, tipo, fecha y estado activo).
</div>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>ID</th>
            <th>Año</th>
            <th>Tipo</th>
            <th>Fecha</th>
            <th>Activo</th>
            <th style="width: 220px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
    @if (!Model.Any())
    {
        <tr>
            <td colspan="6" class="text-center text-muted">No hay registros.</td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Anio</td>
                <td>@item.Tipo</td>
                <td>@item.Fecha.ToString("yyyy-MM-dd")</td>
                <td>
                    @if (item.IsActive)
                    {
                        <span class="badge bg-success">Sí</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">No</span>
                    }
                </td>
                <td>
                    <a class="btn btn-outline-secondary btn-sm" asp-action="Details" asp-route-id="@item.Id">Ver</a>
                    <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    }
    </tbody>
</table>